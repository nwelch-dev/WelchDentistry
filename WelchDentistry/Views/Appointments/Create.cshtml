@model WelchDentistry.Models.Appointment

@{
    ViewData["Title"] = "Create";
}

@using Microsoft.AspNetCore.Identity
@using WelchDentistry.Areas.Identity.Data
@inject UserManager<WelchDentistryUser> UserManager
@{
    var user = await UserManager.GetUserAsync(User);
}

<h1>Create</h1>

<h4>Appointment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomerName" class="control-label"></label>
                <input asp-for=@user.Name class="form-control" />
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppointmentTime" class="control-label"></label>
                <input asp-for="AppointmentTime" class="form-control" />
                <span asp-validation-for="AppointmentTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerDoctor" class="control-label"></label>
                <input asp-for="CustomerDoctor" class="form-control" />
                <span asp-validation-for="CustomerDoctor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
